<body>
    <div class="hero-section">
        <nav class="nav-bar">
            <div class="logo-hamburger">
                <div class="logo">
                    <img class="logo-img" src="/assets/logo 1.png" alt="">
                </div>
                <div class="hamburger">
                    <div class="line"></div>
                    <div class="line"></div>
                    <div class="line"></div>
                </div>
            </div>
            <div class="links">
                <div class="link-box"><a onclick="openNewJob()" class="link">Post Job</a></div>
                <div class="link-box"><a href="" class="link">SignUp</a></div>
                <div class="link-box"><a href="#" onclick="return false" class="link">Find a job</a></div>
                <div class="link-box"><a href="" class="link">Hire Talent</a></div>
            </div>

        </nav>
        <div class="title">
            <!-- <img class="title-img" src="./Group 1.png" alt=""> -->
            <h1 class="title-heading">Find Jobs in <span><img class="aptos-img" src="/assets/aptos-img.png" alt=""></span>
                Ecosystem</h1>
        </div>

        <div class="search-bars">

            <form class="search-form" action="/search">

                <div class="search-field">
                    <div class="search-icon icon"><img src="/assets/search-icon.png" alt="" class="search-img icon-img"></div>
                    <input class="input-field form-element" type="text" name="title" placeholder="Title/Role/KeyWords">
                </div>

                <div class="search-field">
                    <div class="search-icon icon"><img src="/assets/location-icon.png" alt="" class="search-img icon-img"></div>
                    <input class="input-field form-element" name="location" placeholder="Location">
                </div>

                <div class="submit">
                    <button type="submit-btn">Search</button>
                </div>
                
                
            </form>

        </div>
    </div>

    <div class="job-display">
      <% jobs.forEach(job => { %>
        <div class="job-box" onclick="openJobPreview('<%= job.id %>')">
            <div class="company-logo">
                <div class="company-logo-box">
                  <img class="company-logo-img" src="/uploads/companies-logo/<%= job.photo %>" alt="Job Photo">
                </div>
            </div>
            <div class="job-description">
                <h1 class="job-title"><%= job.title %></h1>
                <div class="job-details">
                    <div class="job-area jd-box">
                        <div class="jd-img-box">
                            <img  class="jd-img" src="/assets/💻 Laptop.png" alt="">
                        </div>
                        <p class="jd-img-desc">Tech</p>
                    </div>
                    <div class="job-type jd-box">
                        <div class="jd-img-box">
                            <img  class="jd-img" src="/assets/⏰ Alarm clock.png" alt="">
                        </div>
                        <p class="jd-img-desc"><%= job.type%></p>
                    </div>
                    <div class="job-location jd-box">
                        <div class="jd-img-box">
                            <img  class="jd-img" src="/assets/Earth.png" alt="">
                        </div>
                        <p class="jd-img-desc"><%= job.location %></p>
                    </div>
                </div>
            </div>
            <div class="read-more">
            <a href="/job-preview/<%= job.id %>"><p class="read-more-title">Read More ></p></a>
            </div>
        </div>
        <% }); %>


    </div>

    <script>
        let hamburger = document.querySelector('.hamburger');
        hamburger.onclick = function () {
            let links = document.querySelector('.links');
            links.classList.toggle('active');
        }

        function openJobPreview(jobId){
          let link = '/job-preview/'+jobId;
          window.open(link, '_self');
          // console.log("helllllllllllllllllllll");
        }
        function openNewJob(){
            window.open('/newJob', '_self');
        }

    </script>
</body>

</html>