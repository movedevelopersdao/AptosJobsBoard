.job-box{
    display: flex;
    border-bottom: 1px solid gray;
    margin: 0px 20px;

}

.job-display{
    
    margin: 30px 30px;
    padding: 20px 70px;
}

.job-description{
    padding: 10px 10px;
    flex-grow: 3;
}

.company-logo-box .company-logo-img{
    width: 100px;
    height: 100px;
    border-radius: 20px;
    background: grey;
    flex-grow: 1;

}

.company-logo{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px 10px;
    margin: 10px 30px;
}


.read-more{
    flex-grow: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.job-details{
    display: flex;
    /* justify-content: center; */
    
}

.jd-box{
    display: flex;
    margin: 10px 0px;
    margin-right: 10px;
}

.jd-img{
    height: 20px;
    width: 20px;
}

.jd-img-box{
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 10px 0px;
    margin-right: 10px;
}

.jd-img-desc{
    text-align: center;
    font-family: 'Inter';
font-style: normal;
font-weight: 500;
font-size: 18px;
line-height: 160%;
color: #000000;



}

.job-title{
    font-family: 'Inter';
font-style: normal;
font-weight: 500;
font-size: 24px;
line-height: 160%;
/* or 38px */
margin-bottom: 0px;


color: #000000;
}

.read-more-title{
    font-family: 'Inter';
font-style: normal;
font-weight: 500;
font-size: 18px;
line-height: 160%;
/* identical to box height, or 29px */


color: #747DCF;
}


