    <style>
      body {
    margin: 0 0;
}
.hero-section {
    background: url('/assets/Background-for-1200.png') no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    background-size: cover;
}

.nav-bar {
    display: flex;
    padding: 10px 20px;
}

.logo-hamburger {
    flex-grow: 4;
}

.logo {
    flex-grow: 2;
}

.hamburger {
    display: none;
}

.links {
    font-family: 'Inter';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 20px;
    letter-spacing: 0.07em;
    flex-grow: 3;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all;
}
a:link {
    color: black;
    text-decoration: none;
}
a:visited {
    color: black;
    text-decoration: none;
}
.link-box {
    border-radius: 18px;
    border: 2px solid black;
    padding: 12px 20px;
    transition: all;
    transition-duration: 0.5s;
    transition-timing-function: ease-in;
}
.link-box:hover {
    background: black
}
.link-box:hover a {
    color: white;
}
.aptos-img {
    position: relative;
    top: 3px;
    height: 50px;
}

.title {
    margin: 80px 0;
}

.title-heading {
    font-family: 'Inter';
    text-align: center;
    font-size: 50px;
    font-weight: 400;
    filter: drop-shadow(0px 4px 4px rgba(0, 0, 0, 0.25));
}
.search-form {
    display: flex;
    justify-content: center;
    padding: 50px 0px;
    padding-bottom: 80px;
}

.search-field{
    display: flex;
    border: 1px solid white;
    border-radius: 20px;
    background: white;
    margin-right: 10px;
}

.icon {
    /* position: absolute; */
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 10px;
}




.input-field {

    padding: 10px 30px 10px 15px ;
    font: 'Inter';
    text-align: center;
    font-size: 15px;
    border: 2px solid #263238;
    border-radius: 20px;
    border: none;

}

.input-field:focus{
    outline: none;
}

button{
    background-color: #263238;
    color: white;
    padding: 10px 35px;
    font: 'Inter';
    font-size: 15px;
    border-radius: 20px;
}
